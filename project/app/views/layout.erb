<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>

    <% if current_user %>
      Welcome, <%= @current_user.first_name %>!
      <form action='/sessions' method='post'>
        <input type='hidden' name='_method' value='delete'>
          <input type='submit' value='Sign out'>
      </form>

    <% else %>
      <a href='/users/new'> <button type="button">Sign up</button></a>
      <a href='/sessions/new'> <button type="button">Sign in</button></a>
    <% end %>

    <% if flash[:errors] && !flash[:errors].empty? %>
    <ul id="errors">
      <% flash[:errors].each do |error| %>
      <li> <%= error %> </li>
      <% end %>
    </ul>
<% end %>


    <%= yield %>

  </body>
</html>
